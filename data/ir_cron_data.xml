<odoo>
    <data noupdate="1">
        <!-- AcciÃ³n planificada para sincronizar productos -->
        <record id="ir_cron_sync_product" model="ir.cron">
            <field name="name">Sincronizar productos de odoo 10</field>
            <field name="model_id" ref="model_sync_product"/> 
            <field name="state">code</field>
            <field name="code">model.sync_products()</field> 
            <field name="active">True</field>
            <field name="interval_number">1</field> 
            <field name="interval_type">hours</field> 
            <field name="numbercall">1</field> 
            <field name="doall" eval="False"/>
        </record>
    </data>

    <data noupdate="1">
        <record id="ir_cron_eliminar_productos_sincronizados" model="ir.cron">
            <field name="name">Eliminar Productos Sincronizados</field>
            <field name="model_id" ref="model_sync_product"/> 
            <field name="state">code</field>
            <field name="code">model.eliminar_productos_sincronizados()</field> 
            <field name="active">True</field>
            <field name="interval_number">1</field> 
            <field name="interval_type">hours</field>
            <field name="numbercall">1</field> 
            <field name="doall" eval="True"/>
        </record>
    </data>
</odoo>
